{% extends 'base.html.twig' %}

{% block pageTitle %} Ajouter une voiture
	{{ page_title }}
{% endblock %}

{% block body %}
{% if app.user %}
{% include "composants/header.html.twig" %}
<section id="car" class="car">
<form method="post">
		<h1>Ajouter/modifier une voiture</h1>

		{{ form_start(form) }}

		{{ form_label(form.brand, 'Marque') }}
		{{ form_widget(form.brand) }}
		{{ form_help(form.brand) }}
		{{ form_errors(form.brand) }}

		{{ form_label(form.model, 'Modèle') }}
		{{ form_widget(form.model) }}
		{{ form_help(form.model) }}
		{{ form_errors(form.model) }}

		{{ form_label(form.seats, 'Sièges') }}
		{{ form_widget(form.seats) }}
		{{ form_help(form.seats) }}
		{{ form_errors(form.seats) }}

            <button type="submit" class="btn">Envoyer</button>
            {{ form_end(form) }}
        </form>
</section>
{% else %}
        <p>Vous devez être connecté pour accéder à cette page</p>
    {% endif %}
{% endblock %}